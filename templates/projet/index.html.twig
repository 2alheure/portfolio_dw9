{% extends 'base.html.twig' %}

{% block title %}Mes projets - {{ parent() }}{% endblock %}

{% block body %}

<div class="grid gap-8 sm:grid-cols-2 grid-cols-1">
    {% for p in projets %}
    <div class="rounded overflow-hidden shadow-lg">
        <img class="w-full h-40 bg-gray-200" src="{{ p.images.first }}" alt="Image d'illustration pour le projet">
        <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">{{ p.titre|slice(0, 50) }}</div>
            <p class="text-gray-700 text-base overflow-hidden text-ellipsis whitespace-nowrap">{{ p.description }}</p>
        </div>
        <div class="px-6 pt-4 pb-2">
            {% for techno in p.technologies %}
            <span
                class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"># {{ techno.nom }}</span>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}