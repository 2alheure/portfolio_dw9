<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Portfolio{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>

<body class="flex flex-col min-h-screen gap-8">

    <header class="bg-gray-800 text-white p-4">
        <nav class="container mx-auto flex gap-16 flex-wrap">
            <a href="{{ path('app_home') }}">Accueil</a>

            <a href="{{ path('app_home') }}">Mes projets</a>
            <a href="{{ path('app_home') }}">Mon CV</a>
            <a href="{{ path('app_contact') }}" class="mr-auto">Contactez-moi !</a>

            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}">Back-Office Administrateur</a>
                {% endif %}

                <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </nav>
    </header>

    <div class="mx-auto container">
        {% block body %}{% endblock %}
    </div>

    <footer class="bg-gray-800 text-white p-4 text-center mt-auto">
        &copy; 2023 - DW9
    </footer>
</body>

</html>